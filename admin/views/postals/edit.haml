.block
  .secondary-navigation
    %ul.wat-cf
      %li.first=link_to pat(:list), url(:postals, :index)
      %li=link_to pat(:new), url(:postals, :new)
      %li.active=link_to pat(:edit), url(:postals, :edit, :id => @postal.id)
  .content
    %h2.title
      =pat(:edit)
      =mt(:postal)
    .inner
      -form_for :postal, url(:postals, :update, :id => @postal.id), :method => :put, :class => :form do |f|
        =partial "postals/form", :locals => { :f => f }

-content_for :sidebar, partial("base/sidebar")